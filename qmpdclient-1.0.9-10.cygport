inherit qt4-qmake

DESCRIPTION="Qt4 client for the Music Player Daemon"
HOMEPAGE="http://havtknut.tihlde.org/qmpdclient/"
SRC_URI="mirror://sourceforge/musicpd/${P}.tar.gz"
PATCH_URI="1.0.9-qmake.patch"

CYGQMAKE4_ARGS="PREFIX=/usr"

src_install() {
	cd ${B}
	qt4_qmake_install

	for size in 16 22 48 64
	do
		insinto /usr/share/icons/hicolor/${size}x${size}/apps
		newins ${S}/icons/${PN}${size}.png ${PN}.png
	done

	make_desktop_entry ${PN} QMPDClient ${PN} "AudioVideo;Audio;Player;Qt"
}
